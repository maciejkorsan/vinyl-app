<div>
  <h1 class="my-8 text-4xl font-bold text-white">My Collection</h1>

  <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
    <div class="w-full bg-black">
      <%= link_to  search_records_path, data: { turbo_frame: "modal"},  :class => "bg-blue-500 text-white px-2 py-1 rounded-md size-full flex items-center justify-center" do %>
        <span class="text-xl text-center"><span class="text-3xl">+</span><br/>
          New Record</span>
      <% end %>
    </div>
    <%= turbo_frame_tag :records, class: "contents" do %>
      <%= render @records %>
    <% end %>
  </div>
</div>
