<%= turbo_stream_from "records" %>
<div>
  <header class="flex items-center justify-between gap-6">
    <h1 class="my-8 text-4xl font-bold text-white">My Collection</h1>
    <%= link_to new_record_path, data: { turbo_frame: "modal"},  :class => "text-gray-300 hover:text-gray-100 px-2 py-1 rounded-md  flex items-center justify-center" do %>
      + New Record</span>
  <% end %>
</header>
<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
  <div class="w-full ">
    <%= link_to discogs_search_records_path, data: { turbo_frame: "modal"},  :class => "font-bold text-white px-2 py-1 rounded-md size-full  flex items-center justify-center" do %>
      <span class="text-xl text-center"><span class="text-3xl">+</span><br/>
        Import Record</span>
    <% end %>
  </div>
  <%= turbo_frame_tag :records, class: "contents" do %>
    <%= render @records %>
  <% end %>
</div>
</div>
