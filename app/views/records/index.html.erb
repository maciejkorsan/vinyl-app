<div>
  <h1 class="text-4xl font-bold">Record#index</h1>
  <p>Find me in app/views/records/index.html.erb</p>

  <%= link_to "New Record", new_record_path, class: "bg-blue-500 text-white px-2 py-1 rounded-md" %>

  <ul>
    <% @records.each do |record| %>
      <li>
        <%= link_to record.title, record_path(record) %>
        <%= image_tag record.cover, class: "w-1/2" if record.cover.present? %>
        <%= button_to "Log", logs_path, params: { record_id: record.id }, method: :post, class: "bg-blue-500 text-white px-2 py-1 rounded-md" %>
      </li>
    <% end %>
  </ul>
</div>

