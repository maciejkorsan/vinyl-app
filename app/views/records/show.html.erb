<%= turbo_frame_tag "record_#{@record.id}" do %>
  <div class="p-2">
    <%= link_to records_path, class: "text-gray-200 block mb-2" do %>
      &larr; Back
    <%end %>
    <div class="mb-2 overflow-hidden bg-black rounded-md size-24">
      <%= image_tag @record.cover, class: "size-full object-contain" if @record.cover.present? %>
    </div>
    <p class="w-full overflow-hidden text-sm font-medium text-white text-ellipsis"><%= @record.title %></p>
    <span class="text-sm text-gray-300"><%= @record.artist.name %></span><br/>
    <div class="flex gap-4">
      <%= link_to "Edit", edit_record_path(@record), class: "text-blue-300  py-1 decoration-none" %>
      <%= button_to "Delete record", record_path(@record), method: :delete,  data: {turbo_confirm: "Are you sure?"}, class: "text-red-300  px-2 py-1" %>
    </div>
  </div>
<% end %>
